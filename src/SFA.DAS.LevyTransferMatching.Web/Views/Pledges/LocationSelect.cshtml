@model SFA.DAS.LevyTransferMatching.Web.Models.Pledges.LocationSelectViewModel
@{
    ViewData["Title"] = "Select Location";
}

<a href="@Url.Action("Location", "Pledges", new { Model.EncodedAccountId, Model.CacheKey })" class="govuk-back-link">Back</a>
<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content">
    <partial name="_ValidationSummary" />
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">There are multiple locations based on your selected locations</h1>
            <form method="post" id="select-location-form">

                @for (int i = 0; i < Model.LocationSelectionGroups.Length; i++)
                {
                    <input type="hidden" asp-for="LocationSelectionGroups[i].Index" />

                    <div class="govuk-form-group" error-class="govuk-form-group--error" das-highlight-error-for="LocationSelectionGroups[i]">
                        <fieldset class="govuk-fieldset" id="@($"LocationSelectionGroups_{i}_")">
                            <legend class="govuk-fieldset__legend">Please select the correct location</legend>
                            <span class="govuk-error-message">@Html.ValidationMessageFor(x => Model.LocationSelectionGroups[i])</span>
                            <div class="govuk-radios">

                                @for (int j = 0; j < Model.LocationSelectionGroups[i].LocationSelectionItems.Length; j++) 
                                {
                                    <div class="govuk-radios__item">
                                        <input
                                            class="govuk-radios__input"
                                            id="@($"LocationSelectionGroups_{i}__LocationSelectionItems_{j}_")"
                                            asp-for="LocationSelectionGroups[i].SelectedValue" 
                                            type="radio"
                                            value="@Model.LocationSelectionGroups[i].LocationSelectionItems[j].Value"
                                            das-highlight-error-for="LocationSelectionGroups[i].LocationSelectionItems[j]"
                                            error-class="govuk-textarea--error"
                                            checked="@Model.LocationSelectionGroups[i].LocationSelectionItems[j].Selected">
                                        <label class="govuk-label govuk-radios__label" asp-for="LocationSelectionGroups[i].LocationSelectionItems[j]">@Model.LocationSelectionGroups[i].LocationSelectionItems[j].Value</label>
                                    </div>
                                }

                            </div>
                        </fieldset>
                    </div>
                }

                <div class="govuk-button-group">
                    <button id="submit-selected-locations" class="govuk-button" data-module="govuk-button">
                        Continue
                    </button>
                    <a href="@Url.Action("Location", "Pledges", new { Model.EncodedAccountId, Model.CacheKey })" class="govuk-link govuk-link-secondary govuk-link--no-visited-state govuk-back-link">Back</a>
                </div>
            </form>
        </div>
    </div>
</main>
