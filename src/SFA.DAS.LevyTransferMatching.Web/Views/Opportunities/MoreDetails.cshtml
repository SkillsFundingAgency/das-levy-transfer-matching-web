@model SFA.DAS.LevyTransferMatching.Web.Models.Opportunities.MoreDetailsViewModel

@{
    ViewData["Title"] = "Provide more detail about your apprenticeship";
    ViewBag.GaData.Vpv = "/accounts/opportunities/apply/more-details";
    ViewBag.ZenDeskLabel = "LTM-R-apply-moredetails";
}
<a href="@Url.Action("Apply", new { Model.EncodedAccountId, Model.EncodedPledgeId, Model.CacheKey })" class="govuk-back-link">Back</a>
<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content">
    <partial name="_ValidationSummary" />
    <div class="govuk-grid-row">
        <form method="post">
            <div class="govuk-grid-column-two-thirds">
                <span class="govuk-caption-m">Find a business to transfer your levy to</span>

                <h1 class="govuk-label-wrapper">
                    <label class="govuk-label govuk-label--xl" for="more-detail">
                        Provide more detail about your apprenticeship
                    </label>
                </h1>
                <p>This information will help the business offering the funding opportunity to make a decision about accepting your application.</p>
                <p>In the box below, tell us about:</p>
                <ul class="govuk-list govuk-list--bullet">
                    <li>your organisation</li>
                    <li>why you want an apprentice</li>
                    <li>how you will support the apprentice</li>
                </ul>
                <div class="govuk-character-count" data-module="govuk-character-count" data-maxwords="200">
                    <div class="govuk-form-group" das-highlight-error-for="Details" error-class="govuk-form-group--error" id="more-details">
                        <div id="more-detail-hint" class="govuk-hint">
                            Do not include personal or financial information like your bank account details.
                        </div>
                        <span das-validation-for="Details" class="govuk-error-message"></span>
                        @Html.TextAreaFor(m => m.Details, new { @class = "govuk-textarea govuk-js-character-count", id = "more-detail", name = "more-detail", rows = "5", aria_describedby = "more-detail-hint more-detail-info" })
                    </div>
                    <div id="more-detail-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
                        You have 200 words remaining
                    </div>
                </div>
            </div>
            <div class="govuk-grid-column-one-third">
                <section class="employer-details side-panel">
                    <partial name="/Views/Shared/_OpportunitySummary.cshtml" for="OpportunitySummaryViewModel" />
                </section>
            </div>
            <div class="govuk-grid-column-full">
                <div class="govuk-button-group">
                    <button id="opportunity-criteria-continue" class="govuk-button" data-module="govuk-button">
                        Continue
                    </button>
                    <a href="@Url.Action("Apply", new {Model.EncodedAccountId, Model.EncodedPledgeId, Model.CacheKey})" class="govuk-back-link">Back</a>
                </div>
            </div>
        </form>
    </div>
</main>