@using SFA.DAS.LevyTransferMatching.Web.Models.Opportunities
@inject SFA.DAS.EmployerUrlHelper.ILinkGenerator LinkGenerator
@model ConfirmationViewModel
@{
    ViewData["Title"] = "Application Confirmation";
    ViewBag.GaData.Vpv = "/accounts/opportunities/apply/confirmation";
}

<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content">
    <div class="govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <div class="govuk-panel govuk-panel--confirmation">
                    <h1 class="govuk-panel__title">Application submitted</h1>
                    <p>
                        You have applied for transfer funds from <strong>@Model.AccountName (@Model.Reference)</strong>
                    </p>
                </div>
                <h2 class="govuk-heading-m">What happens next?</h2>

                @if (Model.IsNamePublic)
                {
                    <p><strong>@Model.AccountName</strong> will review your application.</p>
                }
                else
                {
                    <p>The organisation offering <strong>opportunity @Model.Reference</strong> will review your application.</p>
                }

                <p>They may contact you to ask follow-up questions about your application.</p>

                <p>
                    When they have made a decision you will receive an email and a notification in your apprenticeship service account. 
                    You will have 6 weeks to accept the funds or they will expire.
                </p>

                <p>
                    You can still apply for and 
                    <a class="govuk-link govuk-link--no-visited-state" href="@Url.Action("Index")">view other funding opportunities</a>
                    whilst you wait for a decision
                </p>
            </div>
        </div>
    </div>
</main>