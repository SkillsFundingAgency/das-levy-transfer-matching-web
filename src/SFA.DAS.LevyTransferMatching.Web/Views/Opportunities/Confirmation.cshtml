@using SFA.DAS.LevyTransferMatching.Web.Models.Opportunities
@inject SFA.DAS.EmployerUrlHelper.ILinkGenerator LinkGenerator
@model ConfirmationViewModel
@{
    ViewData["Title"] = "Application Confirmation";
    ViewBag.GaData.Vpv = "/accounts/opportunities/apply/confirmation";
    ViewBag.ZenDeskLabel = "LTM-R-apply-conf";
}

<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content">
    <div class="govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <div class="govuk-panel govuk-panel--confirmation">
                    <h1 class="govuk-panel__title">Application submitted</h1>
                    <div class="govuk-panel__body">
                        @(Model.IsNamePublic ? Model.AccountName : "Opportunity") (@Model.Reference)
                    </div>

                </div>
                <h2 class="govuk-heading-m">What happens next?</h2>

                @if (Model.IsNamePublic)
                {
                    <p><strong>@Model.AccountName (@Model.Reference)</strong> will review your application.</p>
                }
                else
                {
                    <p>The organisation offering <strong>opportunity (@Model.Reference)</strong> will review your application.</p>
                }

                <p>They may contact you to ask follow-up questions.</p>

                <p>When they have made a decision you will receive an email and a notification in your apprenticeship service account.</p>
                
                <p>You will have 6 weeks to accept the funds if your application is approved. If you do not accept within 6 weeks then this funding opportunity will no longer be available to you.</p>
                
                <p>
                    You can still apply for and <a class="govuk-link govuk-link--no-visited-state" href="@Url.Action("Index")">view other funding opportunities</a> whilst you wait for a decision.
                </p>

                <p>
                    <a href="@LinkGenerator.AccountsLink($"accounts/{Model.EncodedAccountId}/teams")" class="govuk-link govuk-link--no-visited-state" )>Go to my account</a>
                </p>
            </div>
        </div>
    </div>
</main>