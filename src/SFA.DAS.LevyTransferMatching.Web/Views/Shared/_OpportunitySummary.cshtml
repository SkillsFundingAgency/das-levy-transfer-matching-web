@model SFA.DAS.LevyTransferMatching.Web.Models.Shared.OpportunitySummaryViewModel

<div class="das-highlight">
    <h2 class="govuk-heading-s">@Model.Description wants to fund apprenticeship training in:</h2>
    <ul class="govuk-list">
        <li>
            <span>Location: </span>
            <strong>@Model.LocationList</strong>
        </li>
        <li>
            <span>Sector: </span>
            <strong>@Model.SectorList</strong>
        </li>
        <li>
            <span>Type of job role: </span>
            <strong>@Model.JobRoleList</strong>
        </li>
        <li>
            <span>Level: </span>
            <strong>@Model.LevelList</strong>
        </li>
    </ul>
    @if (!Model.HideFooter)
   {
        <div class="app-highlight__footer">
            <p class="govuk-heading-s">Total funding available: £@Model.Amount.ToString("N0")</p>
        </div>
   }
</div>