@model SFA.DAS.LevyTransferMatching.Web.Models.Shared.OpportunitySummaryViewModel

<div class="das-highlight">
    <h2 class="govuk-heading-s">@Model.Description wants to fund apprenticeship training in:</h2>
    <ul class="govuk-list">
        <li>
            <strong>Location: </strong>
            <span>####</span>
        </li>
        <li>
            <strong>Sector: </strong>
            <span class="das-!-color-dark-grey">@Model.SectorList</span>
        </li>
        <li>
            <strong>Type of job role: </strong>
            <span class="das-!-color-dark-grey">@Model.JobRoleList</span>
        </li>
        <li>
            <strong>Level: </strong>
            <span class="das-!-color-dark-grey">@Model.LevelList</span>
        </li>
    </ul>
    <div class="app-highlight__footer">
        <p class="govuk-heading-s">Total funding available: up to £@Model.Amount.ToString("N0") available in @Model.YearDescription</p>
    </div>
</div>